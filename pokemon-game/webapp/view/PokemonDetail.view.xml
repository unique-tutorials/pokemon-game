<mvc:View controllerName="com.pokemon.ux.pokemongame.controller.PokemonDetail"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:custom="com.pokemon.ux.pokemongame.custom">

    <Page showNavButton="true" id="page" title="{i18n>title}" class="lmsMainPageDetail sapUiResponsiveContentPadding button-nav customDetailContainerClass" navButtonPress=".onNavBack">
        <content>
               <custom:DetailContainer id="smodUxDetailContainer">
                   <custom:items>
                    <custom:CTimer id="gameTimer"  />
                    <custom:Board id="pokemonBoard" class="sapUiSmallMargin" visible="false"/>
                   </custom:items>
               </custom:DetailContainer>
        </content>
    </Page>
</mvc:View>
